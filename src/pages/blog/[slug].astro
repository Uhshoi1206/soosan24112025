---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Layout from '../../components/Layout.tsx';
import { getVisibleBlogPosts } from '../../utils/contentCollections';
import { blogCategories } from '../../data/blogData';
import { OptimizedImage } from '../../components/ui/optimized-image.tsx';
import TableOfContents from '../../components/blog/TableOfContents.tsx';
import '../../components/blog/BlogStyles.css';

export async function getStaticPaths() {
  const allPosts = await getVisibleBlogPosts();
  return allPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const categoryLabel = blogCategories[post.category] || post.category;

const allPosts = await getVisibleBlogPosts();
const relatedPosts = allPosts
  .filter(p => p.category === post.category && p.slug !== post.slug)
  .slice(0, 3);
---

<BaseLayout
  title={`${post.title} | Blog soosanmotor.com`}
  description={post.description}
>
  <Layout client:load>
    <article class="container mx-auto px-4 py-8">
      <div class="max-w-4xl mx-auto">
        <div class="mb-8">
          <div class="flex items-center gap-4 text-sm text-gray-500 mb-4">
            <a
              href={`/danh-muc-bai-viet/${post.category}`}
              class="bg-primary/10 text-primary px-3 py-1 rounded-full hover:bg-primary/20 transition"
            >
              {categoryLabel}
            </a>
            <time datetime={post.publishDate}>
              {new Date(post.publishDate).toLocaleDateString('vi-VN', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
            <span>{post.readTime}</span>
          </div>

          <h1 class="text-4xl font-bold mb-4">{post.title}</h1>

          <p class="text-xl text-gray-600 mb-6">{post.description}</p>

          {post.images && post.images[0] && (
            <OptimizedImage
              client:load
              src={post.images[0]}
              alt={post.title}
              className="w-full rounded-lg mb-8"
              useCase="hero"
              lazy={false}
            />
          )}
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
          <div class="lg:col-span-3">
            <div class="blog-content prose max-w-none" set:html={post.content} />

            {post.tags && post.tags.length > 0 && (
              <div class="mt-8 pt-6 border-t">
                <h3 class="text-sm font-semibold text-gray-500 mb-3">Tags:</h3>
                <div class="flex flex-wrap gap-2">
                  {post.tags.map((tag: string) => (
                    <span key={tag} class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            )}
          </div>

          <aside class="lg:col-span-1">
            {post.headings && post.headings.length > 0 && (
              <div class="sticky top-24">
                <TableOfContents client:load headings={post.headings} />
              </div>
            )}
          </aside>
        </div>

        {relatedPosts.length > 0 && (
          <div class="mt-16 pt-8 border-t">
            <h2 class="text-2xl font-bold mb-6">Bài viết liên quan</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              {relatedPosts.map((relatedPost) => (
                <a
                  key={relatedPost.slug}
                  href={`/blog/${relatedPost.slug}`}
                  class="block bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition"
                >
                  {relatedPost.imageUrl && (
                    <OptimizedImage
                      client:load
                      src={relatedPost.imageUrl}
                      alt={relatedPost.title}
                      className="w-full h-48 object-cover"
                      useCase="thumbnail"
                    />
                  )}
                  <div class="p-4">
                    <h3 class="font-bold mb-2 line-clamp-2 hover:text-primary transition">
                      {relatedPost.title}
                    </h3>
                    <p class="text-sm text-gray-600 line-clamp-2">
                      {relatedPost.description}
                    </p>
                  </div>
                </a>
              ))}
            </div>
          </div>
        )}
      </div>
    </article>
  </Layout>
</BaseLayout>
